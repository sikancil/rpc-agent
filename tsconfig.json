{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true
    
    // "module": "system",
    // "baseUrl": ".",
    // "outFile": "./dist/bundle.js",
    // "moduleResolution": "node",
    // "paths": { "*": ["node_modules/*"] }
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}